<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/noto_bold</item>
        <item name="android:textColor">#38435A</item>
    </style>

    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">0dp</item>

        <item name="neumorph_cornerSizeTopLeft">0dp</item>
        <item name="neumorph_cornerSizeTopRight">0dp</item>
        <item name="neumorph_cornerSizeBottomLeft">0dp</item>
        <item name="neumorph_cornerSizeBottomRight">0dp</item>
    </style>

</resources>